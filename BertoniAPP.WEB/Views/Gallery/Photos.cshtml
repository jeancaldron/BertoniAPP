@model IEnumerable<BertoniAPP.BLL.Gallery.ViewModels.PhotoViewModel>

@{
  ViewData["Title"] = "Photos";
}

<div class="container">
  <h5>Fotos</h5>

  <div class="container">
    <div class="row">
      @foreach (var item in Model)
      {
      <div class="col-sm-4 py-2">
        <div class="card h-100 border-primary">
          <img class="card-img-top img-fluid" src="@Html.DisplayFor(modelItem => item.ThumbnailUrl)" alt="Card image cap">
          <div class="card-body">
            <h3 class="card-title">@Html.DisplayFor(modelItem => item.Id)</h3>
            <p class="card-text"> @Html.DisplayFor(modelItem => item.Title)</p>
            <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Ver comentarios</button>
          </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
          <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title">Comentarios</h4>
              </div>
              <div class="modal-body">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>
                          Id
                        </th>
                        <th>
                          Name
                        </th>
                        <th>
                          Body
                        </th>
                        <th></th>
                      </tr>
                    </thead>
                    <tbody>
                      @foreach (var photo in item.Comments)
                      {
                        <tr>
                          <td>
                            @Html.DisplayFor(modelItem => photo.Id)
                          </td>
                          <td>
                            @Html.DisplayFor(modelItem => photo.Name)
                          </td>
                          <td>
                            @Html.DisplayFor(modelItem => photo.Body)
                          </td>
                        </tr>
                      }
                    </tbody>
                  </table>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
              </div>
            </div>

          </div>
        </div>
      </div>
      }
    </div>
  </div>
</div>